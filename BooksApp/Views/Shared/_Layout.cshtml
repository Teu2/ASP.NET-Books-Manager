                @*<button class="button button-blue-back" onclick="redirectToHome()">
                    <i class="fa-solid fa-book"></i> Books
                </button>
                <button class="button button-blue-back" onclick="redirectToCreate()">
                    Add Book
                </button>*@
            </ul>
        </div>

        <div class="page-content">
            @RenderBody()
        </div>
    </div>
    @RenderSection("scripts", required: false);
